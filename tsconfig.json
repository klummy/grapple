{
  "compilerOptions": {
    "baseUrl": "./",
    "allowJs": true,
    "module": "esnext",
    "esModuleInterop": true,
    "target": "es5",
    "sourceMap": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    // "declaration": true,
    "jsx": "react",
    "jsxFactory": "h",
    "strict": true,

    "paths": {
      "~/*": ["./src/*"]
    }
  },
  "include": ["src/**/*.tsx", "src/**/*.ts"]
}